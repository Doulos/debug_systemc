#!gdb

echo --------------------------------------------------------------------------------\n
echo \033[1m\033[94m> Sourcing
shell echo -n " `realpath $gdb_dir/init` "
echo \033[1m\033[94m-----------------\033[0m\n
echo Working directory 
pwd
set args --config ../tests/inject.cfg
show args
echo --------------------------------------------------------------------------------\n

define Load
  set pagination off
  echo \033[1m\033[94m> Sourcing $arg0 --------------------------------\033[0m\n
  source ../gdb/$arg0
  set pagination on
end
document Load
  Over-the-top convenience to load (i.e., source) GDB scripts.
end
echo Available scripts:\n
shell ls ../gdb/

set pagination on
